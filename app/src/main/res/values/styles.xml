<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="loginDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="FriendApp" />

    <style name="FriendApp.TexAppearance">
        <item name="android:textSize">14sp</item>
        <!--<item name="android:fontFamily">@font/font</item>-->
    </style>

    <style name="TextInputHintText">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:textSize">8sp</item>
        <!--<item name="android:fontFamily">@font/font</item>-->
    </style>

    <!-- login page -->

    <style name="FriendApp.EdtLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxEms">20</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:textAppearance">@style/FriendApp.TexAppearance</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="FriendApp.TvForgotPassword">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Forgot password ?</item>
        <item name="android:textAppearance">@style/FriendApp.TexAppearance</item>
    </style>

    <style name="FriendApp.BtnSignIn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Sign In</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:textAppearance">@style/FriendApp.TexAppearance</item>
        <item name="android:background">@drawable/btn_click</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
